<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="user" namespace="/user" extends="struts-default">
		<interceptors>
			<interceptor name="authenticatitonInterceptor"
				class="struts2demo.controller.AuthenticaitonInterceptor">
			</interceptor>
			<interceptor-stack name="authenticationStack">
				<interceptor-ref name="authenticatitonInterceptor">
					<param name="excludeMethods">login</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="authenticationStack"></default-interceptor-ref>

		<global-results>
			<result name="login" type="redirectAction">
				<param name="namespace">/user</param>
				<param name="actionName">login</param>
			</result>
		</global-results>
		
		<action name="login" class="struts2demo.controller.user.UserAction"
			method="login">
			<result name="succ">/index.jsp</result>
			<result name="error">/index.jsp</result>
		</action>

		<action name="edit" class="struts2demo.controller.user.UserAction"
			method="edit">
			<result name="success">/index.jsp</result>
			<result name="error">/index.jsp</result>


		</action>

		<action name="delete" class="struts2demo.controller.user.UserAction"
			method="delete">
			<result name="success">/index.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
	</package>

</struts>    
