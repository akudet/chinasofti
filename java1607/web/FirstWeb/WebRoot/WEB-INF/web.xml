<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>
  
  <listener>
  	<listener-class>jtwu.listener.CountListener</listener-class>
  </listener>


<filter>
	<filter-name>LoginFilter</filter-name>
	<filter-class>jtwu.filter.LoginFilter</filter-class>
</filter>

<filter-mapping>
	<filter-name>LoginFilter</filter-name>
	<url-pattern>/users/*</url-pattern>
</filter-mapping>

  <servlet>
    <description>a ReSTful service</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>jtwu.controller.servlet.UsersServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>jtwu.controller.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>RegistryServlet</servlet-name>
    <servlet-class>jtwu.controller.servlet.RegistryServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>jtwu.controller.servlet.LogoutServlet</servlet-class>
  </servlet>


  <servlet-mapping>
  	<servlet-name>UsersServlet</servlet-name>
  	<url-pattern>/users</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/users/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistryServlet</servlet-name>
    <url-pattern>/users/registry</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/users/logout</url-pattern>
  </servlet-mapping>

</web-app>
